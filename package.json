  },
  "homepage": "https://github.com/CodersCamp2020/CodersCamp2020.Project.JavaScript.StarWarsQuiz#readme",
  "dependencies": {
    "regenerator-runtime": "^0.13.7",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
